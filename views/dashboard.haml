%form{ action: "/tweet", method: "post" }
  %select{ name: "to", id: "to" }
    - @users.each do |users|
      - if users.nickname == session["nickname"]
        %option{ value: "@#{users.nickname}", selected: true } @#{users.nickname}
      - else
        %option{ value: "@#{users.nickname}" } @#{users.nickname}
  %textarea.span6{ name: "message", id: "message" }
  %button{ type: "submit", class: "btn btn-primary" } Tweet